<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount project.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}

<div class="row mb-4">
  {{#if posts.length}}
    {{#each posts as |post|}}
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-header">
            <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            <p>Posted by {{post.user.name}} on {{format_date post.createdAt}}</p>
          </div>
          <div class="card-body">
            <p>{{post.content}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <div class="col-md-12">
      <h4>No blog posts yet!</h4>
    </div>
  {{/if}}
</div>
