<div class="row">
  <div class="col-md-12 mb-4">
    <h2>My Posts</h2>
  </div>
</div>

<div class="row mb-4">
  {{#if posts.length}}
    {{#each posts as |post|}}
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-header">
            <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            <p>Posted on {{format_date post.createdAt}}</p>
          </div>
          <div class="card-body">
            <p>{{post.content}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <div class="col-md-12">
      <h4>You haven't created any posts yet!</h4>
      <a href="/dashboard" class="btn btn-primary">Create Your First Post</a>
    </div>
  {{/if}}
</div> 